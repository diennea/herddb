include 'Common.fbs';

namespace herddb.proto.flatbuf;

table Response {
  type: MessageType;  
  replyMessageId: long;

  // AUTH
  token: [byte];
  
  tx: long;

  // ERROR
  error: string;
  stackTrace: string;
 

  notLeader :bool;
  last: bool;
  // comma separated list (it is better that a vector in this case)
  columnNames: string;
  rows: [Row];
  data: [byte];

  newValue: Map;

  updateCount: long;
  batchResults: [DMLResult];
}

root_type Response;